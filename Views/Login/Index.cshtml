@model LoginViewModel

<div class="login-page">
    <h2>Login</h2>

    <form asp-action="Login" asp-controller="Login" method="post">
        @Html.AntiForgeryToken()

        @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
        {
                <div class="alert alert-danger">
                    <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                    {
                                <li>@error.ErrorMessage</li>
                    }
                    </ul>
                </div>
        }

        <div class="login-switch">
            <label>User: </label>
            <input type="checkbox" id="AdminSwitch" name="IsAdminLogin" value="true"> Admin
            <input type="hidden" name="IsAdminLogin" value="false" />
        </div>

        <div class="login-form">
            <div class="form-group">
                <label for="Username">Username:</label>
                <input type="text" id="UsernameTextBox" asp-for="Username" class="form-control" />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" id="PasswordBox" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <button id="LoginButton" class="btn btn-primary" type="submit">Login</button>
        </div>
    </form>
</div>